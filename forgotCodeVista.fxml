<?xml version="1.0" encoding="UTF-8"?>

<?scenebuilder-stylesheet vista.css?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>

<StackPane fx:id="forgotCodeVista" prefHeight="1080.0" prefWidth="1920.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ForgotCodeVistaController">
  <children>
      <VBox alignment="CENTER">
         <children>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="567.0">
               <children>
                  <Label text="Please enter your full name:">
                     <HBox.margin>
                        <Insets right="50.0" />
                     </HBox.margin>
                     <font>
                        <Font size="30.0" />
                     </font>
                  </Label>
                  <TextField fx:id="studyCodeTextBox">
                     <font>
                        <Font size="22.0" />
                     </font></TextField>
               </children>
               <VBox.margin>
                  <Insets bottom="75.0" />
               </VBox.margin>
            </HBox>
            <Label text="Which study group are you in?">
               <font>
                  <Font size="29.0" />
               </font>
            </Label>
            <HBox alignment="CENTER">
               <children>
                  <RadioButton fx:id="controlRadio" alignment="TOP_CENTER" mnemonicParsing="false" onAction="#cRadioAction" text="Control">
                     <HBox.margin>
                        <Insets right="25.0" />
                     </HBox.margin>
                     <font>
                        <Font size="20.0" />
                     </font>
                  </RadioButton>
                  <RadioButton fx:id="trainingRadio" mnemonicParsing="false" onAction="#tRadioAction" text="Training">
                     <HBox.margin>
                        <Insets left="25.0" />
                     </HBox.margin>
                     <font>
                        <Font size="20.0" />
                     </font>
                  </RadioButton>
               </children>
               <VBox.margin>
                  <Insets top="25.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
    <Button fx:id="nextButton" mnemonicParsing="false" onAction="#forgotCodeAction" text="Next" StackPane.alignment="BOTTOM_RIGHT">
         <font>
            <Font size="36.0" />
         </font>
         <StackPane.margin>
            <Insets bottom="25.0" right="50.0" />
         </StackPane.margin>
      </Button>
  </children>
</StackPane>
