<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?scenebuilder-stylesheet vista.css?>

<StackPane fx:id="introControl" prefHeight="1080.0" prefWidth="1920.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="IntroControlVistaController">
  <children>
      <VBox alignment="CENTER_LEFT" maxWidth="1100.0">
         <children>
            <Label text="Hi, welcome to your Quick Refresher Session. This session will take  ~1min. Please follow the on-screen instructions and answer the brief questions as they appear." textAlignment="CENTER" wrapText="true">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <font>
                  <Font size="25.0" />
               </font>
            </Label>
            <Label alignment="CENTER" text="In this session you will:" textAlignment="CENTER">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
               <font>
                  <Font size="22.0" />
               </font>
            </Label>
            <Label layoutX="942.0" layoutY="770.0" text="1)  Answer 2 questions">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
               <font>
                  <Font size="22.0" />
               </font>
            </Label>
            <Label text="2)  Perform compression-only CPR* for 1min without visual feedback">
               <font>
                  <Font size="22.0" />
               </font></Label>
            <HBox alignment="TOP_CENTER" prefHeight="100.0">
               <VBox.margin>
                  <Insets top="25.0" />
               </VBox.margin>
               <children>
                  <Label text="*compression-only CPR" underline="true">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="75.0" />
                     </HBox.margin>
                  </Label>
                  <VBox>
                     <children>
                        <HBox prefHeight="35.0">
                           <children>
                              <Label text="Do " textFill="RED">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </Label>
                              <Label layoutX="10.0" layoutY="10.0" text="NOT" textFill="RED" underline="true">
                                 <font>
                                    <Font name="System Bold" size="18.0" />
                                 </font>
                              </Label>
                              <Label layoutX="60.0" layoutY="10.0" text=" administer any breaths to the manikin" textFill="RED">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                        <HBox layoutX="10.0" layoutY="10.0" prefHeight="35.0">
                           <children>
                              <Label text="Do " textFill="RED">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </Label>
                              <Label layoutX="10.0" layoutY="10.0" text="NOT" textFill="RED" underline="true">
                                 <font>
                                    <Font name="System Bold" size="18.0" />
                                 </font>
                              </Label>
                              <Label layoutX="60.0" layoutY="10.0" text=" pause after 30 compressions" textFill="RED">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </Label>
                           </children>
                        </HBox>
                     </children>
                     <HBox.margin>
                        <Insets right="75.0" />
                     </HBox.margin>
                  </VBox>
                  <VBox prefHeight="200.0">
                     <children>
                        <HBox fillHeight="false" prefHeight="35.0">
                           <children>
                              <Label layoutX="10.0" layoutY="10.0" text="DO" textFill="#00ae0e" underline="true">
                                 <font>
                                    <Font name="System Bold" size="18.0" />
                                 </font>
                              </Label>
                              <Label layoutX="60.0" layoutY="10.0" prefHeight="27.0" prefWidth="350.0" text=" continue to perform compressions until" textFill="#00ae0e" wrapText="true">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                                 <HBox.margin>
                                    <Insets />
                                 </HBox.margin>
                              </Label>
                           </children>
                        </HBox>
                        <Label text="the laptop timer is up" textFill="#00ae0e">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
               </children>
            </HBox>
            <Label alignment="CENTER" prefHeight="35.0" prefWidth="1100.0" text="Please do not press the &quot;Exit Session&quot; button unless extenuating circumstances." textAlignment="RIGHT">
               <VBox.margin>
                  <Insets top="40.0" />
               </VBox.margin>
               <font>
                  <Font size="23.0" />
               </font>
            </Label>
            <Label alignment="CENTER" prefHeight="35.0" prefWidth="1109.0" text="Have a good session!">
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
               <font>
                  <Font size="25.0" />
               </font>
            </Label>
         </children>
      </VBox>
      <Button fx:id="nextButton" alignment="BOTTOM_RIGHT" mnemonicParsing="false" onAction="#nextAction" text="Next" StackPane.alignment="BOTTOM_RIGHT">
         <StackPane.margin>
            <Insets bottom="25.0" right="50.0" />
         </StackPane.margin>
         <font>
            <Font size="36.0" />
         </font>
      </Button>
  </children>
</StackPane>
