<?xml version="1.0" encoding="UTF-8"?>

<?scenebuilder-stylesheet vista.css?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="vista2" prefHeight="1080.0" prefWidth="1920.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Vista2Controller">
  <children>
      <VBox alignment="TOP_CENTER" stylesheets="@vista.css">
         <children>
            <Label text="Please answer the following two questions:" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="30.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="100.0" top="50.0" />
               </VBox.margin>
            </Label>
            <Label text="1. Have you performed CPR / chest compressions since your last training session?" textFill="WHITE">
               <font>
                  <Font size="25.0" />
               </font>
            </Label>
            <HBox alignment="CENTER">
               <children>
                  <RadioButton fx:id="yesRadio" alignment="TOP_CENTER" mnemonicParsing="false" text="Yes" textFill="WHITE">
                     <HBox.margin>
                        <Insets right="25.0" />
                     </HBox.margin>
                     <font>
                        <Font size="18.0" />
                     </font>
                  </RadioButton>
                  <RadioButton fx:id="noRadio" mnemonicParsing="false" text="No" textFill="WHITE">
                     <HBox.margin>
                        <Insets left="25.0" />
                     </HBox.margin>
                     <font>
                        <Font size="18.0" />
                     </font>
                  </RadioButton>
               </children>
               <VBox.margin>
                  <Insets top="25.0" />
               </VBox.margin>
            </HBox>
            <Label text="2. Rate your comfort level in performing chest compressions on a scale of 1-10:" textFill="WHITE">
               <VBox.margin>
                  <Insets top="100.0" />
               </VBox.margin>
               <font>
                  <Font size="25.0" />
               </font>
            </Label>
            <HBox alignment="TOP_CENTER" layoutX="10.0" layoutY="481.0">
               <children>
                  <VBox alignment="TOP_CENTER">
                     <children>
                        <RadioButton fx:id="scale1" alignment="TOP_CENTER" mnemonicParsing="false" text="1" textFill="WHITE">
                           <font>
                              <Font size="18.0" />
                           </font>
                           <VBox.margin>
                              <Insets left="8.0" />
                           </VBox.margin>
                        </RadioButton>
                        <Label text="very uncomfortable" textFill="WHITE">
                           <font>
                              <Font size="16.0" />
                           </font>
                           <VBox.margin>
                              <Insets top="15.0" />
                           </VBox.margin>
                        </Label>
                     </children>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </VBox>
                  <RadioButton fx:id="scale2" alignment="TOP_CENTER" mnemonicParsing="false" text="2" textFill="WHITE">
                     <HBox.margin>
                        <Insets right="40.0" />
                     </HBox.margin>
                     <font>
                        <Font size="18.0" />
                     </font>
                  </RadioButton>
                  <RadioButton fx:id="scale3" alignment="TOP_CENTER" mnemonicParsing="false" text="3" textFill="WHITE">
                     <HBox.margin>
                        <Insets right="40.0" />
                     </HBox.margin>
                     <font>
                        <Font size="18.0" />
                     </font>
                  </RadioButton>
                  <RadioButton fx:id="scale4" alignment="TOP_CENTER" mnemonicParsing="false" text="4" textFill="WHITE">
                     <HBox.margin>
                        <Insets right="40.0" />
                     </HBox.margin>
                     <font>
                        <Font size="18.0" />
                     </font>
                  </RadioButton>
                  <RadioButton fx:id="scale5" alignment="TOP_CENTER" mnemonicParsing="false" text="5" textFill="WHITE">
                     <HBox.margin>
                        <Insets right="40.0" />
                     </HBox.margin>
                     <font>
                        <Font size="18.0" />
                     </font>
                  </RadioButton>
                  <RadioButton fx:id="scale6" alignment="TOP_CENTER" mnemonicParsing="false" text="6" textFill="WHITE">
                     <HBox.margin>
                        <Insets right="40.0" />
                     </HBox.margin>
                     <font>
                        <Font size="18.0" />
                     </font>
                  </RadioButton>
                  <RadioButton fx:id="scale7" alignment="TOP_CENTER" mnemonicParsing="false" text="7" textFill="WHITE">
                     <HBox.margin>
                        <Insets right="40.0" />
                     </HBox.margin>
                     <font>
                        <Font size="18.0" />
                     </font>
                  </RadioButton>
                  <RadioButton fx:id="scale8" alignment="TOP_CENTER" mnemonicParsing="false" text="8" textFill="WHITE">
                     <HBox.margin>
                        <Insets right="40.0" />
                     </HBox.margin>
                     <font>
                        <Font size="18.0" />
                     </font>
                  </RadioButton>
                  <RadioButton fx:id="scale9" alignment="TOP_CENTER" mnemonicParsing="false" text="9" textFill="WHITE">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <font>
                        <Font size="18.0" />
                     </font>
                  </RadioButton>
                  <VBox alignment="TOP_CENTER">
                     <children>
                        <RadioButton fx:id="scale10" alignment="TOP_CENTER" mnemonicParsing="false" text="10" textFill="WHITE">
                           <font>
                              <Font size="18.0" />
                           </font>
                           <VBox.margin>
                              <Insets left="1.0" />
                           </VBox.margin>
                        </RadioButton>
                        <Label text="very comfortable" textFill="WHITE">
                           <font>
                              <Font size="16.0" />
                           </font>
                           <VBox.margin>
                              <Insets top="15.0" />
                           </VBox.margin>
                        </Label>
                     </children>
                  </VBox>
               </children>
               <VBox.margin>
                  <Insets top="25.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
    <Button fx:id="nextButton" mnemonicParsing="false" onAction="#nextAction" text="Next" StackPane.alignment="BOTTOM_RIGHT">
         <font>
            <Font size="36.0" />
         </font>
         <StackPane.margin>
            <Insets bottom="25.0" right="50.0" />
         </StackPane.margin>
      </Button>
  </children>
</StackPane>
