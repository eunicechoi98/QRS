<StackPane fx:id="stepFourStackPane" prefHeight="1080.0" prefWidth="1920.0" stylesheets="@vista.css" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="stepFourVistaController">
   <children>
      <Button fx:id="stepFourNextButton" mnemonicParsing="false" onAction="#stepFourNextAction" text="&gt;" textFill="WHITE" StackPane.alignment="CENTER_RIGHT">
         <StackPane.margin>
            <Insets right="10.0" />
         </StackPane.margin>
         <font>
            <Font name="Microsoft JhengHei UI" size="130.0" />
         </font>
      </Button>
      <VBox fx:id="stepFourVBox" alignment="CENTER" maxWidth="800.0">
         <children>
            <Label fx:id="stepFourLabel" alignment="CENTER" text="Step 3: Watch Training Video" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="Microsoft JhengHei UI Bold" size="40.0" />
               </font>
            </Label>
            <Text fx:id="stepFourText" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="This is the step 1 to the training part of the QRS if you do not pass the initial evaluation. You will watch an 1-minute video on how to properly perform chest-compressions." textAlignment="CENTER" wrappingWidth="800.0">
               <font>
                  <Font name="Microsoft JhengHei UI" size="35.0" />
               </font>
               <VBox.margin>
                  <Insets top="100.0" />
               </VBox.margin>
            </Text>
         </children>
         <stylesheets>
            <URL value="@vista.css" />
            <URL value="@vista.css" />
         </stylesheets>
      </VBox>
   </children>
